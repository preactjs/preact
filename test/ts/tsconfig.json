{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"lib": ["es6", "dom"],
		"strict": true,
		"typeRoots": ["../../"],
		"types": [],
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"paths": {
			"preact": ["../../"],
			"preact/*": ["../../*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx"]
}
