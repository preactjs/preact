{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "lib": ["dom", "es5"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "preact": ["./src/index.d.ts"],
      "preact/*": ["./*"]
    },
    "target": "es5",
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": false,
    "types": ["vitest/globals"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "coverage", "demo"]
}
